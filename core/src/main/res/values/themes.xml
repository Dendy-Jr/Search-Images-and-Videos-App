<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinderApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/red_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/red_900</item>
        <!-- Customize your theme here. -->
        <item name="screenBackground">@color/white</item>
        <item name="imageViewBackgroundColor">#DCDCDC</item>
        <item name="progressBarColor">@color/black</item>
        <item name="textColor">@color/black</item>
        <item name="buttonColor">@color/black</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="iconsColor">@color/white</item>
        <item name="iconsColorReversed">@color/black</item>
        <item name="glideLoadErrorIconColor">@color/black</item>
        <item name="icSearchColor">@color/black</item>
        <item name="fontFamily">@font/autour_one</item>
        <item name="strokeColorForColorFilter">@color/black</item>
    </style>

    <style name="Theme.FinderApp.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:dialogCornerRadius" tools:targetApi="p">16dp</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogMessageText</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogTitleText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialAlertDialogTitleText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialAlertDialogMessageText" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/red_900</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <!--        <item name="android:gravity">center</item>-->
    </style>

    <attr name="screenBackground" format="color|reference" />
    <attr name="imageViewBackgroundColor" format="color|reference" />
    <attr name="progressBarColor" format="color|reference" />
    <attr name="textColor" format="color|reference" />
    <attr name="buttonColor" format="color|reference" />
    <attr name="buttonTextColor" format="color|reference" />
    <attr name="iconsColor" format="color|reference" />
    <attr name="glideLoadErrorIconColor" format="color|reference" />
    <attr name="icSearchColor" format="color|reference" />
    <attr name="strokeColorForColorFilter" format="color|reference" />
    <attr name="iconsColorReversed" format="color|reference" />
</resources>