<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPositioningItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/choose_the_positioning_of_items"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvImageScreens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/image_screens"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPositioningItems"
        tools:textColor="@color/black" />

    <View
        android:id="@+id/viewImageScreensTop"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="12dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvImageScreens" />

    <View
        android:id="@+id/viewImageScreensLeft"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/viewImageScreensBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewImageScreensTop" />

    <RadioGroup
        android:id="@+id/radioGroupImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/viewImageScreensBottom"
        app:layout_constraintEnd_toStartOf="@id/viewImageScreensRight"
        app:layout_constraintStart_toEndOf="@id/viewImageScreensLeft"
        app:layout_constraintTop_toBottomOf="@id/viewImageScreensTop">

        <RadioButton
            android:id="@+id/rbOneColumnImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one_column" />

        <RadioButton
            android:id="@+id/rbTwoColumnsImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/two_columns" />

        <RadioButton
            android:id="@+id/rbThreeColumnsImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/three_columns" />

        <RadioButton
            android:id="@+id/rbFourColumnsImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/four_columns" />

    </RadioGroup>

    <View
        android:id="@+id/viewImageScreensRight"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/viewImageScreensBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewImageScreensTop" />

    <View
        android:id="@+id/viewImageScreensBottom"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupImage" />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvVideoScreens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/video_screens"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewImageScreensBottom"
        tools:textColor="@color/black" />

    <View
        android:id="@+id/viewVideoScreensTop"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="12dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvVideoScreens" />

    <View
        android:id="@+id/viewVideoScreensLeft"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/viewVideoScreensBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewVideoScreensTop" />

    <RadioGroup
        android:id="@+id/radioGroupVideo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/viewVideoScreensBottom"
        app:layout_constraintEnd_toStartOf="@id/viewVideoScreensRight"
        app:layout_constraintStart_toEndOf="@id/viewVideoScreensLeft"
        app:layout_constraintTop_toBottomOf="@id/viewVideoScreensTop">

        <RadioButton
            android:id="@+id/rbOneColumnVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one_column" />

        <RadioButton
            android:id="@+id/rbTwoColumnsVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/two_columns" />

    </RadioGroup>

    <View
        android:id="@+id/viewVideoScreensRight"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/viewVideoScreensBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewVideoScreensTop" />

    <View
        android:id="@+id/viewVideoScreensBottom"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupVideo" />

</androidx.constraintlayout.widget.ConstraintLayout>