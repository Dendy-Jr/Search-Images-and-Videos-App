<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPositioningItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Choose the positioning of items on the application screens"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPositioningItems">

        <RadioButton
            android:id="@+id/rbHorizontalSingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Single horizontal" />

        <RadioButton
            android:id="@+id/rbVerticalSingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Single vertical" />

        <RadioButton
            android:id="@+id/rbHorizontalDouble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Double horizontal" />

        <RadioButton
            android:id="@+id/rbVerticalDouble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Double vertical" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>