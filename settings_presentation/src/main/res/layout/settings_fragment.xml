<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPositioningItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/choose_the_positioning_of_items"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPositioningItems">

        <RadioButton
            android:id="@+id/rbOneColumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one_column" />

        <RadioButton
            android:id="@+id/rbTwoColumns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/two_columns" />

        <RadioButton
            android:id="@+id/rbThreeColumns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/three_columns" />

        <RadioButton
            android:id="@+id/rbFourColumns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/four_columns" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>